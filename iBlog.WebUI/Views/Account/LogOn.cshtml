@{
    ViewBag.Title = "后台登录";
}
@Styles.Render("~/Content/account")
<div class="container animated fadeInDownSmall">
    <div class="row login-block">
        <h3 class="col-md-4 col-md-offset-4 login-title text-center">后台登录</h3>
        <div class="col-md-4 col-md-offset-4 login-wrap">
            <div class="form-group form-group-lg">
                <input type="text" class="form-control" id="txtUserName" placeholder="用户名" />
            </div>
            <div class="form-group form-group-lg">
                <input type="password" class="form-control" id="txtPwd" placeholder="密码" />
            </div>
            <button id="btnLogin" type="button" class="btn btn-success btn-lg btn-block" autocomplete="off"><i class="fa fa-sign-in fa-fw"></i> 登 录</button>
        </div>
    </div>
</div>
<!--Time Bar-->
<div id="progress-back" class="load-item">
    <div id="progress-bar"></div>
</div>
@Scripts.Render("~/bundles/js")
@Scripts.Render("~/bundles/account")
